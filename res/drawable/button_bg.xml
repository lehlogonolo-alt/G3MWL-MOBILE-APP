<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Blue tone consistent with medical dashboard (pharma blue) -->
    <solid android:color="#1976D2" />

    <!-- Rounded corners -->
    <corners android:radius="12dp" />

    <!-- Optional subtle shadow look (for elevation illusion) -->
    <stroke
        android:width="1dp"
        android:color="#1565C0" />

    <!-- Padding to make the button feel balanced -->
    <padding
        android:left="12dp"
        android:top="12dp"
        android:right="12dp"
        android:bottom="12dp" />
</shape>
