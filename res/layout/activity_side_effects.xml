<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SideEffectsActivity">

    <!-- ðŸ”µ Top App Bar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#1976D2"
        app:title="Manage Side Effects"
        app:titleTextColor="@android:color/white"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:navigationIconTint="@android:color/white" />

    <!-- ðŸ”˜ Add New Side Effect section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Add New Side Effect"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabAddSideEffect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Add Side Effect"
            android:src="@drawable/ic_add"
            android:tint="@android:color/white"
            app:backgroundTint="#1976D2"/>
    </LinearLayout>

    <!-- ðŸ§© Table Headers -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#E3F2FD"
        android:paddingVertical="8dp"
        android:paddingHorizontal="12dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Patient Name"
            android:textStyle="bold"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Side Effect"
            android:textStyle="bold"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Severity"
            android:textStyle="bold"
            android:textSize="16sp"/>
    </LinearLayout>

    <!-- ðŸ“‹ Table Content -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerSideEffects"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>



