<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8FAFB"
    android:orientation="vertical"
    android:padding="20dp">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1976D2"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"

        android:title="Dashboard"
        android:titleTextColor="@android:color/white"
        android:elevation="4dp"
        android:layout_marginBottom="10dp"
        app:menu="@menu/dashboard_menu" />

    <!-- Dashboard Header -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="G3MWL"
        android:textColor="#1976D2"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp" />

    <!-- Dashboard Grid -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:alignmentMode="alignMargins"
        android:rowOrderPreserved="false"
        android:useDefaultMargins="true">

        <!-- Patients Added (top left) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardPatientsAdded"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_columnWeight="1"
            app:cardCornerRadius="14dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvPatientsAddedLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Patients Added"
                    android:textColor="#1976D2"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginBottom="6dp" />

                <TextView
                    android:id="@+id/tvPatientsAddedValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#000000"
                    android:textSize="26sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Average Weight Loss (top right) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardAvgWeightLoss"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_columnWeight="1"
            app:cardCornerRadius="14dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvAvgWeightLossLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Average Weight Loss"
                    android:textColor="#1976D2"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginBottom="6dp" />

                <TextView
                    android:id="@+id/tvAvgWeightLossValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0%"
                    android:textColor="#000000"
                    android:textSize="26sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Patients (bottom left, pressable) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardPatients"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_columnWeight="1"
            app:cardCornerRadius="14dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@android:color/white"
            android:clickable="true"
            android:focusable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_patient"
                    app:tint="#1976D2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Patients"
                    android:textColor="#1976D2"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Side Effects (bottom right, pressable) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardSideEffects"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_columnWeight="1"
            app:cardCornerRadius="14dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@android:color/white"
            android:clickable="true"
            android:focusable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_sideeffects"
                    app:tint="#1976D2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Side Effects"
                    android:textColor="#1976D2"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </GridLayout>
</LinearLayout>






